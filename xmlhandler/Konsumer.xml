<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <!-- 
  message_queue : Write 할 Queue Name, 마지막 문자에 message_queue_workers 에서 설정한 값만큼 루프를 돌며 Queue 에 접근 
	(message_queue_workers = 3 : mua-ii-p_1, mua-ii-p_2, mua-ii-p_3 Queue에 Write)
  message_queue_workers : 접근 시도할 MSMQ Queue 갯수 (0,1, 2 ...)
  consumer_workers : conumser worker 갯수 (0,1, 2 ...)
  workers_multiple : 하나의 Queue 에 접근할 Thread 수 (0,1, 2 ...)
  offset_topic 설정
	  OFFSET_BEGINNING : Consume from beginning
	  OFFSET_END : Consume from end
	  OFFSET_STORED : Use offset storage
	  OFFSET_INVALID : Invalid offset
  offset_autocommit : offset auto commit 유무 (true | false)
  order_secure : msmq 저장시 message 순서 보장
  -->

  <application>
    <param name="service_name" value="__Log_Consumer"/>
    <param name="service_desc" value="__Log_Consumer"/>
	<param name="message_queue" value=".\PRIVATE$\_-p_"/>
	<param name="message_queue_workers" value="4"/>
	<param name="message_lable" value="logs"/>
	<param name="consumer_workers" value="1"/>
	<param name="workers_multiple" value="2"/>
	<param name="offset_topic" value="OFFSET_BEGINNING"/>
	<param name="offset_autocommit" value="false"/>
	<param name="order_secure" value="false"/>

  </application>
  
  <repository>
	<param name="broker" value="k1_ata.outer.9_a.com:9092"/>
    <param name="topic" value="transport__rydts"/>
    <param name="group_id" value="us_r06"/>
    <param name="security_protocol" value="SASL_PLAINTEXT"/>
    <param name="sasl_mechanisms" value="PLAIN"/>
    <param name="sasl_username" value="us_06"/>
    <param name="sasl_password" value="U6_xcw71k0v48"/>
  </repository>
  
  <log>
    <appender name="file_appender">	
	<!--
	<appender name="file_appender"> : 파일 로깅 설정 (log4cxx)
	enable : 로깅 사용 여부 (true | false)
	file_path : 로깅 파일 위치. 상대경로 사용시 .exe 위치 기준
	file_name_pattern : 로깅 파일 이름 규칙. daily rolling
	conversion_pattern : 로깅 형식
	level : 로깅 레벨 (ALL < DEBUG < INFO < WARN < ERROR < FATAL)
	-->
      <param name="enable" value="true"/>
      <param name="file_path" value="./log/KOR__Log_Consumer.log"/>
      <param name="file_name_pattern" value=".yyyy-MM-dd"/>
      <param name="conversion_pattern" value="%d{yyyyMMdd HH:mm:ss.SSS}[%t][%p][%x]%m%n"/>
      <param name="level" value="DEBUG"/>
    </appender>
	
    <appender name="db_appender">
	<!--
	<appender name="db_appender"> : db 로깅(log4cxx)
	enable : 로깅 사용 여부 (true | false)
	url : db 연결 connection string
	conversion_pattern : 로깅 형식
	level : 로깅 레벨 (ALL < DEBUG < INFO < WARN < ERROR < FATAL)
	-->
      <param name="enable" value="false"/>
      <param name="url" value="DRIVER={SQL Server};SERVER=1_.5,6279;DATABASE=IP_SAP;UID=sap_ser_mw;PWD=Qf|_ve:vn4se?kxs;"/>
      <param name="conversion_pattern" value="INSERT INTO TblDBLog(STID, DateTime, Level, Message) VALUES(%x, '%d{yyyyMMdd HH:mm:ss.SSS}', '%p', '%m')"/>
      <param name="level" value="DEBUG"/>
    </appender>
  </log>
</configuration>

